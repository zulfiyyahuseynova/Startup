@model User
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="FullName">Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Name">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Founder">Founder</label>
                <input asp-for="Founder" class="form-control" placeholder="Founder">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4 mt-3">
                <label asp-for="Comment">Description</label>
                <input asp-for="Comment" class="form-control" placeholder="Comment">
            </div>

            <div class="form-group col-md-4 mt-3">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" type="file" class="form-control" placeholder="Photo">
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mt-3">Create</button>
        </div>
    </form>
</div>